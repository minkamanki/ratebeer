<p id="notice"><%= notice %></p>

<h2>
  <%= @brewery.name %>
</h2>
<p>
  <i>
    <%= 'Established in ' %>
    <%= @brewery.year %>
  </i>
</p>

<p>
<%= 'Number of beers:' %>
  <%= @brewery.beers.count %>
</p>

<p>
  <% @brewery.beers.each do |beer| %>
    <%= link_to beer.name, beer %>
  <% end %>
</p>


<p>
  <% if @brewery.ratings.empty? %>
    Brewery has not yet ratings!
    <% else %>
      <% if @brewery.ratings.count > 1 %>
        Brewery has <%= @brewery.ratings.count%> ratings with an average of <%= @brewery.average_rating%>.
      <% else %>
        Brewery has 1 rating: <%= @brewery.ratings.first.score%>.
      <% end %>
  <% end %>
</p>

<%= link_to 'Edit', edit_brewery_path(@brewery) %> |
<%= link_to 'Back', breweries_path %>
<%= button_to 'Destroy', @brewery, method: :delete, form: { data: { turbo_confirm: "Do you want to remove #{@brewery.name}?" } } %>
